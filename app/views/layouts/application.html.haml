!!! Transitional

%html{:xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', :lang => 'en'}
  %head
    %meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}/
    %title
      EB Luncher
    = stylesheet_link_tag 'style'
    = javascript_include_tag :defaults

  %body
    #wrapper
      #header
        #logo
          %h1
            eb luncher
          %br/
          %span{:style => 'float: right; text-align: right;'}
            = link_to t(:source_code_link), 'http://github.com/kbl/luncher'
          %p
            - if current_user && Setting.instance.system_locked
              %span{:style => 'color: red'}
                = t(:system_locked)

      #menu
        %ul
          - if current_user
            %li
              = link_to t(:my_account_link), account_path
            %li
              = link_to t(:my_orders_link), :controller => 'orders', :action => 'my'
            %li
              = link_to t(:lunches_link), lunches_path
            %li
              = link_to t(:vendors_link), vendors_path
            %li
              = link_to t(:order_list_link), orders_path
            %li
              = link_to t(:users_link), users_path
            %li
              = link_to t(:settings_link), edit_settings_path
            %li
              = link_to t(:log_out_link), logout_path
          - else
            %li
              = link_to t(:register_link), new_account_path
            %li
              = link_to t(:log_in_link), login_path
            %li
              = link_to t(:forgot_password_link), new_password_reset_path

      #page
        %p#notice{:style => 'color: green'}
          = flash[:notice] 
        #page-bgtop
          #page-bgbtm
            #content
              = yield
            #sidebar
            %div{:style => 'clear: both'}
              &nbsp;

      #footer
        %p
          Copyright (c) 2010 ayoy.net. All rights reserved. Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.
