<h2><%= t '.available_lunch_options' %></h2>

<p>
  <%= select_date @date, :start_year => 2010, :end_year => 2020 %>
</p>
<p>
  <%= label_tag :include_dateless, 'Include dateless?' %>
  <%= check_box_tag :include_dateless, 'yes', true %>
</p>

<%= render :partial => 'observe_field', :locals => { :field_name => :date_year } %> 
<%= render :partial => 'observe_field', :locals => { :field_name => :date_month } %> 
<%= render :partial => 'observe_field', :locals => { :field_name => :date_day } %> 
<%= render :partial => 'observe_field', :locals => { :field_name => :include_dateless } %> 

<p><%= link_to t('.add_lunch_option_link'), new_lunch_path %></p>
<p>
<table>
  <thead>
    <tr>
      <td><b><%= Lunch.human_attribute_name(:vendor) %></b></td>
      <td><b><%= t '.id' %></b></td>
      <td><b><%= Lunch.human_attribute_name(:description) %></b></td>
      <td><b><%= t '.refunded' %>?</b></td>
      <td><b><%= Lunch.human_attribute_name(:price) %>*</b></td>
    </tr>
  </thead>
  <tbody id='lunches_list'>
    <%= render :partial => 'lunch_to_show', :collection => @lunches %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan=5>* <%= t '.discounted_price_if_applicable' %></td>
    </tr>
  </tfoot>
</table>
</p>
