%tr
  %td{:align => 'center'}
    = lunch_to_show.vendor
  %td{:align => 'center'}
    = lunch_to_show.name
  %td
    = lunch_to_show.description
  %td
    = to_currency lunch_to_show.price
  %td
    = link_to t('edit_link'), edit_lunch_path(lunch_to_show)
    = link_to t('remove_link'), lunch_path(lunch_to_show), :method => :delete
